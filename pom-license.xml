<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.ibm.mobile</groupId>
  <version>Main-SNAPSHOT</version>
  <artifactId>sample-license-checker</artifactId>
  <packaging>pom</packaging>
  <name>WL Sample license checker</name>

  <properties>
    <samples.root>.</samples.root>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>com.ibm.plugin</groupId>
        <artifactId>imp-maven-license-plugin</artifactId>
        <version>Main-SNAPSHOT</version>
        <executions>
          <execution>
            <id>samples-copyright-check</id>
            <phase>validate</phase>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <skip>false</skip>
              <regexp>true</regexp>
              <header>${env.MFP_GIT_UTIL}/maven/samples_copyright.txt</header>

              <properties>
                <CopyrightYear>(20[01][0-9], )?201[3-6]</CopyrightYear>
              </properties>

              <includes>
                <include>**/*.*</include>
              </includes>

              <excludes>
                <exclude>**/.npmignore</exclude>
                <exclude>**/.vscode</exclude>
                <exclude>**/config.xml</exclude>
                <exclude>assembly.xml</exclude>
                <exclude>pom-*.xml</exclude>
                <exclude>build-ipa.xml</exclude>
                <exclude>build-windows*.xml</exclude>
                <exclude>**/.jazzignore</exclude>
                <exclude>**/.git/**</exclude>
                <exclude>**/.git*/**</exclude>
                <exclude>**/.git*</exclude>
                <exclude>**/*.md</exclude>
                <exclude>**/*.log</exclude>
                <exclude>**/common/views/**</exclude>
                <exclude>**/*.properties</exclude>
                <exclude>**/*.txt</exclude>
                <exclude>**/*.wav</exclude>
                <exclude>**/Release-iphoneos/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/*.json</exclude>
                <exclude>**/*.apk</exclude>
                <exclude>**/*.ipa</exclude>
                <exclude>**/*.dex</exclude>
                <exclude>**/*.cache</exclude>
                <exclude>**/*.xcodeproj/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/*.ap_</exclude>
                <exclude>**/*.zip</exclude>
                <exclude>**/*.tgz</exclude>
                <exclude>**/*.plist</exclude>
                <exclude>**/*.xib</exclude>
                <exclude>**/*.pch</exclude>
                <exclude>**/plugins.xml</exclude>
                <exclude>**/*keystore</exclude>
                <exclude>**/*.a</exclude>
                <exclude>**/*.so</exclude>
                <exclude>**/*.sql</exclude>
                <exclude>**/*.script</exclude>
                <exclude>**/*.exe</exclude>
                <exclude>**/*.bin</exclude>
                <exclude>**/bin/</exclude>
                <exclude>**/*.mom</exclude>
                <exclude>**/Hooks/**</exclude>
                <exclude>**/maven/**</exclude>
                <exclude>**/cloneall/**</exclude>
                <exclude>**/native/res/values-*/</exclude>
                <exclude>**/native/res/values/</exclude>
                <exclude>**/build/</exclude>
                <exclude>**/.gradle/</exclude>

                <!-- Windows phone 8 binaries -->
                <exclude>**/*.dll</exclude>
                <exclude>**/*.suo</exclude>
                <exclude>**/*.pri</exclude>
                <exclude>**/*.winmd</exclude>

                <!-- TO DO : Check Windows phone 8 WL build files-->
                <exclude>**/*.sln</exclude>
                <exclude>**/*.csproj*</exclude>
                <exclude>**/*.xaml</exclude>
                <exclude>**/windowsphone8/native/Properties/*</exclude>
                <exclude>**/windowsphone8/native/Resources/*</exclude>
                <!-- auto-generated and Visual Studio files : excluded preferably -->
                <exclude>**/Resources/AppResources.Designer.cs</exclude>
                <exclude>**/Resources/AppResources.resx</exclude>
                <exclude>**/Properties/AppManifest.xml</exclude>
                <exclude>**/Properties/AssemblyInfo.cs</exclude>
                <exclude>**/Properties/WMAppManifest.xml</exclude>

                <!-- Exclude third-party materials -->
                <exclude>**/demos/mobileGallery/**</exclude>
                <exclude>**/dojo/**</exclude>
                <exclude>**/dojox/**</exclude>
                <exclude>**/dijit/**</exclude>
                <exclude>**/Pods/**</exclude>
                <exclude>**/layers/*layer.js</exclude>
                <exclude>**/iphone/native/config.xml</exclude>
                <exclude>**/android/native/res/xml/config.xml</exclude>
                <exclude>**/iphone/nativeResources/config.xml</exclude>
                <exclude>**/android/nativeResources/res/xml/config.xml</exclude>
                <exclude>**/windowsphone8/native/config.xml</exclude>
                <exclude>**/iphone/nativeEmptyApp/config.xml</exclude>
                <exclude>**/android/nativeEmptyApp/res/xml/config.xml</exclude>
                <exclude>**/jqueryMobile/**</exclude>
                <exclude>**/jquery*.js</exclude>
                <exclude>**/jquery*.css</exclude>
                <exclude>**/mobiscroll*.css</exclude>
                <exclude>**/mobiscroll*.js</exclude>
                <exclude>**/sencha-touch.js</exclude>
                <exclude>**/sencha-touch.css</exclude>
                <exclude>**/fips_premain.c</exclude>
                <exclude>**/org.apache.cordova.*/**</exclude>
                <exclude>**/cordova.js</exclude>
                <exclude>**/mqttws31.js</exclude>
                <exclude>**/Newtonsoft.Json.5.0.8/**</exclude>

                <exclude>**/qunit.css</exclude>
                <exclude>**/qunit.js</exclude>
                <exclude>**/ionic.bundle.js</exclude>
                <exclude>**/angular-route.js</exclude>
                <exclude>**/ionic.css</exclude>
                <exclude>**/bootstrap-theme.css</exclude>
                <exclude>**/bootstrap.css</exclude>
                <exclude>**/bootstrap.js</exclude>
                <exclude>**/gradlew.bat</exclude>
                <exclude>**/SWRevealViewController/**</exclude>
                <exclude>**/snap.js</exclude>


                <!-- Try and exclude Worklight code from copyright checks .. their years are a bit different-->
                <exclude>**/*.png.wluser</exclude>
                <exclude>**/*template</exclude>
                <exclude>**/*template.wluser</exclude>
                <exclude>**/cordova.xml</exclude>
                <exclude>**/.wldata</exclude>
                <exclude>**/.externalToolBuilders/**</exclude>
                <exclude>**/android/native/gen/**</exclude>
                <exclude>**/WorklightSDK/**</exclude>
                <exclude>**/Cordova.framework/**</exclude>
                <exclude>**/CordovaLib/**</exclude>
                <exclude>**/iphone/native/Frameworks/**</exclude>
                <exclude>**/CDVMainViewController.*</exclude>
                <exclude>**/native/**/common/**</exclude>
                <exclude>**/native/**/idx/**</exclude>
                <exclude>**/native/**/www/**</exclude>
                <exclude>**/common/js/idx/**</exclude>
                <exclude>**/wlclient/**</exclude>
                <exclude>**/skinLoader.html</exclude>
                <exclude>**/buildtime.sh</exclude>
                <exclude>**/main.m</exclude>
                <exclude>**/*template.wluser</exclude>
                <exclude>**/WorklightAPI/**</exclude>

                <!-- .idea files we generate for Android Studio -->
                <exclude>**/.idea/**</exclude>
                <exclude>**/*.iml</exclude>

                <!-- exclude files generated by aapt -->
                <exclude>**/gen/**/R.java</exclude>
                <exclude>**/gen/**/BuildConfig.java</exclude>
                <exclude>**/gen/**/Manifest.java</exclude>

                <!-- exclude files generated for cordova projects-->
                <exclude>**/hooks/**</exclude>
                <exclude>**/mobilefirst/**</exclude>
                <exclude>**/platforms/**</exclude>
                <exclude>**/plugins/**</exclude>

		<!-- some files that seems obvious to exclude -->

		<exclude>**/*.ttf</exclude>
		<exclude>**/*.otf</exclude>
		<exclude>**/*.pdf</exclude>
		<exclude>**/*.p12</exclude>

		<!-- not sure about these -->
                <!-- should they have a copyright or not ? -->

		<exclude>**/*.storyboard</exclude>
		<exclude>**/*.strings</exclude>
		<exclude>**/*.appxmanifest</exclude>
		<exclude>**/*.shproj</exclude>
		<exclude>**/*.projitems</exclude>
        	<exclude>**/*.gradle</exclude>
		<exclude>**/*.wlfragment</exclude>
		<exclude>**/*.mf</exclude>
		<exclude>**/*.pro</exclude>
		<exclude>**/*.mtj</exclude>
		<exclude>**/*.targets</exclude>
		<exclude>**/*.css.map</exclude>
		<exclude>**/*.css.eot</exclude>
		<exclude>**/*.xcworkspacedata</exclude>
		<exclude>**/*.xsl</exclude>
		<exclude>**/*.svg</exclude>
		<exclude>**/*.eot</exclude>
		<exclude>**/*.woff</exclude>
		<exclude>**/*.manifest*</exclude>

                <!-- do we provide lock files ? -->
		<exclude>**/*.lock</exclude>

              </excludes>

              <mapping>
                <m>JAVADOC_STYLE</m>
                <rptdesign>XML_STYLE</rptdesign>
                <off>XML_STYLE</off>
                <asy>XML_STYLE</asy>
                <shu>XML_STYLE</shu>
                <sql>DOUBLEDASHES_STYLE</sql>
                <script>DOUBLEDASHES_STYLE</script>
                <swift>SLASHSTAR_STYLE</swift>
                <less>SLASHSTAR_STYLE</less>
                <cnf>SCRIPT_STYLE</cnf>
              </mapping>

            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
